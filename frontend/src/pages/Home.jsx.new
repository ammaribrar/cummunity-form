      // Update the UI optimistically
      setPosts(posts.map(post => 
        post._id === postId 
          ? { 
              ...post, 
              votes: voteType === 'upvote' ? post.votes + 1 : post.votes - 1,
              userVote: voteType === 'upvote' ? 1 : -1 
